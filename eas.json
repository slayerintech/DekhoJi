{
  "cli": {
    "version": ">= 3.18.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "android": {
        "gradleCommand": ":app:assembleDebug --stacktrace"
      }
    },
    "apk": {
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "buildType": "apk"
      }
    },
    "production": {
      "android": {
        "gradleCommand": ":app:bundleRelease --stacktrace --warning-mode all"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
